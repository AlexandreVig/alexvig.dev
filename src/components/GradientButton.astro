---
interface Props {
  href?: string;
  class?: string;
}

const { href, class: className = "" } = Astro.props;

const baseStyles =
  "gradient-button px-5 py-4 md:px-6 md:py-5 font-bricolage text-3xl font-semibold";

const classes = `${baseStyles} ${className}`;
---

{
  href ? (
    <a href={href} class={classes}>
      <slot />
    </a>
  ) : (
    <button class={classes}>
      <slot />
    </button>
  )
}
