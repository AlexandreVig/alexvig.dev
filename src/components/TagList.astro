---
interface Props {
  tags: string[];
  linked?: boolean;
}

const { tags, linked = false } = Astro.props;
---

<div class="flex flex-wrap gap-2">
  {
    tags.map((tag) =>
      linked ? (
        <a
          href={`/blog/tag/${tag.toLowerCase()}`}
          class="px-3 py-1 text-xs font-medium bg-accent-muted text-accent rounded-full hover:bg-accent hover:text-background transition-colors"
        >
          {tag}
        </a>
      ) : (
        <span class="px-3 py-1 text-xs font-medium bg-accent-muted text-accent rounded-full">
          {tag}
        </span>
      ),
    )
  }
</div>
