{
  "extends": "astro/tsconfigs/strict",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": [
        "src/*"
      ],
      "@components/*": [
        "src/components/*"
      ],
      "@layouts/*": [
        "src/layouts/*"
      ],
      "@styles/*": [
        "src/styles/*"
      ]
    },
    "jsx": "preserve"
  },
  "include": [
    ".astro/types.d.ts",
    "**/*",
    "src/content.config.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}